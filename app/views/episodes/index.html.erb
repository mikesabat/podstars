<p id="notice"><%= notice %></p>

<h1>Episodes</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Star ID</th>
      <th>Pod ID</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @episodes.each do |ep| %>
      <tr>
        <td><%= ep.title %></td>
        <td><%= ep.description %></td>
        <td><%= ep.star_id %></td>
        <td><%= ep.podcast_id %></td>
        <td><%= link_to 'Show', ep %></td>
        <td><%= link_to 'Edit', edit_episode_path(ep) %></td>
        <td><%= link_to 'Destroy', ep, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ep', new_episode_path %>