<p id="notice"><%= notice %></p>

<h1>Podcasts</h1>

<table>
  <thead>
    <tr>
      <th> </th>
      <th>Name</th>
      <th>Host</th>
      <th>Feed</th>
      <th>Homepage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @podcasts.each do |podcast| %>
      <tr>
        <% if podcast.image_url != nil %>
          <td><%= image_tag(podcast.image_url, :size => "75x75") %> </td>
        <% end %>
        <td><%= podcast.name %></td>
        <td><%= podcast.host %></td>
        <td><%= podcast.feed %></td>
        <td><%= podcast.homepage %></td>
        <td><%= link_to 'Show', podcast %></td>
        <td><%= link_to 'Edit', edit_podcast_path(podcast) %></td>
        <td><%= link_to 'Destroy', podcast, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

